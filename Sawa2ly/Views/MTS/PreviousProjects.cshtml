
@{
    ViewBag.Title = "PreviousProjects";
    Layout = "~/Views/CustomersDash/_LayoutC.cshtml";
}

<div class="container">
    <h5 class="h1" style="text-align: center;color: #007b5e;margin-bottom: 50px;text-transform: uppercase;">Previous Projects</h5>

@foreach (var projectTrainees in Model)
{
    if (projectTrainees.Project.Status == 1)
    {
        <div class="row carousel-row">
            <div class="col-xs-8 col-xs-offset-2 slide-row">
                <div id="carousel-3" class="carousel slide slide-carousel" data-ride="carousel">
                    <!-- Wrapper for slides -->
                    <div class="carousel-inner">
                        <div>
                            <img width="140px" height="140px" src="~/Sources/images.jpg" alt="Image">
                        </div>
                    </div>
                </div>
                <div class="slide-content">
                    <h4>@projectTrainees.Project.Name</h4>
                    <p>
                        @projectTrainees.Project.Description
                    </p>
                </div>
                <div class="slide-footer">
                    <span class="pull-right buttons">
                        <button class="btn btn-sm btn-default"><i class="fa fa-fw fa-eye"></i> Show</button>
                    </span>
                </div>
            </div>
        </div>
    }
}

</div>