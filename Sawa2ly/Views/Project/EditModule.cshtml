@model Sawa2ly.Models.Project

@{
    Layout = null;
}



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>EditModule</title>
    <link href="~/Sources/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="~/Sources/css/bootstrap.min.js"></script>
    <script src="~/Sources/jquery.min.js"></script>
    <link rel="stylesheet" href="~/Sources/fontawesome-free-5.8.1-web/css/all.css" crossorigin="anonymous">
    <script src="~/Sources/gijgo-combined-1.9.13/js/gijgo.min.js" type="text/javascript"></script>
    <link href="~/Sources/gijgo-combined-1.9.13/css/gijgo.min.css" rel="stylesheet" type="text/css" />
    <style>
        body {
            background: -webkit-linear-gradient(left, #d4efc9, #638e90);
        }
        .emp-profile {
            font-family:Roboto,sans-serif;
	        background:#fff;
            padding: 3%;
            margin-top: 3%;
            margin-bottom: 3%;
            border-radius: 0.5rem;
            height: 540px;
            overflow: scroll;
        }
        ::-webkit-scrollbar {
            width: 10px;
        }
        ::-webkit-scrollbar-track {
            background: #f1f1f1;
            border-radius: 10px;
        }
        ::-webkit-scrollbar-thumb {
            background: #888;
            border-radius: 10px;
        }
        ::-webkit-scrollbar-thumb:hover {
            background: #555;
        }
    </style>
</head>
<body>

    <div class="container emp-profile">
        <div class="row">
            <label class="col-md-12 text-md-center" style="color: #000;font-family: 'Pacifico', cursive;font-size: 3em;margin-bottom: 1em;">Edit Project Module</label>
            <hr />
        </div>

        
        
        <form action="@Url.Action("EditModule", "Project")" method="post">

            <input id="StudentId" name="proId" type="hidden" value="@Model.Id" />

            <div class="form-group row">
                <label class="col-md-5 col-form-label text-md-right" style="font-size: 16px;font-family: cursive;font-weight: bold;">Start Date</label>
                <div class="col-md-6">
                    <input id="StartDate" name="StartDate" width="276" value="@Model.StartDate"/>
                    <script>
                        $('#StartDate').datepicker({
                            uiLibrary: 'bootstrap4'
                        });
                    </script>
                </div>
            </div>


            <div class="form-group row">
                <label class="col-md-5 col-form-label text-md-right" style="font-size: 16px;font-family: cursive;font-weight: bold;">End Date</label>
                <div class="col-md-6">
                    <input id="EndDate" name="EndDate" width="276" value="@Model.EndDate"/>
                    <script>
                        $('#EndDate').datepicker({
                            uiLibrary: 'bootstrap4'
                        });
                    </script>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-md-5 col-form-label text-md-right" style="font-size: 16px;font-family: cursive;font-weight: bold;">Status</label>
                <div class="col-md-6">
                    @Html.DropDownList("status", new List<SelectListItem>
                        {
                            new SelectListItem{ Text="On Progress", Value = "0" },
                            new SelectListItem{ Text="Delivered", Value = "1" },
                         }, new { @class = "form-control" , style = "width: 276px;" })
                </div>
            </div>

            <div class="form-group row">
                <label class="col-md-5 col-form-label text-md-right" style="font-size: 16px;font-family: cursive;font-weight: bold;">Price</label>
                <div class="col-md-6">
                    <input name="price" type="text" class="form-control" placeholder="Price in $" style="width:276px" value="@Model.Price">
                </div>
            </div>
            
            <div class="form-group row" style="margin-top:40px">
                <div class="col-md-5"></div>
                <button type="submit" class="btn btn-lg btn-primary" style="background: #87ada2;border-color:#659091;">Edit</button>
            </div>
        </form>
    </div>

</body>
</html>
