
@{
    ViewBag.Title = "DeliveredProjects";
    Layout = "~/Views/CustomersDash/_LayoutC.cshtml";
}
@model IEnumerable<Sawa2ly.Models.Project>

<div class="container" style="padding-left:40px;padding-right:40px;box-shadow: 0px 0px 10px #ccc;border-radius:10px;padding-top:20px;">
    <h5 class="h1" style="text-align: center;color: #007b5e;margin-bottom: 50px;text-transform: uppercase;">Delivered Projects</h5>

    @foreach (var project in Model)
    {

    <div class="row carousel-row">
        <div class="col-xs-8 col-xs-offset-2 slide-row">
            <div id="carousel-3" class="carousel slide slide-carousel" data-ride="carousel">
                <!-- Wrapper for slides -->
                <div class="carousel-inner">
                    <div>
                        <img width="140px" height="140px" src="~/Sources/images.jpg" alt="Image">
                    </div>
                </div>
            </div>
            <div class="slide-content">
                <h4>@project.Name</h4>
                <p>
                    @project.Description
                </p>
            </div>
            <div class="slide-footer">
                <span class="pull-right buttons">
                    <a href="@Url.Action("Index", "Project", new { id=@project.Id })">
                        <button class="btn btn-sm btn-default"><i class="fa fa-fw fa-eye"></i> Show</button>
                    </a>
                </span>
            </div>
        </div>
    </div>

    }

</div>
