@model Sawa2ly.Models.ApplicationUser

@{
    ViewBag.Title = "EditProfile";
    Layout = "~/Views/AdminsDash/_LayoutA.cshtml";
}

<style>
    .bu {
        background-color: #555555;
        color: white;
        border: 2px solid #555555;
    }

        .bu:hover {
            background-color: white;
            color: #555555;
        }
</style>

<h2 style="margin-bottom:30px;">Edit Your Info</h2>

<div class="container bootstrap snippet">
    <div class="row">

        <div class="col-sm-12">
            <div class="tab-content">
                <div class="tab-pane active" id="home">
                    <form class="form" action="@Url.Action("SaveEdit", "MD")" method="post" id="registrationForm">

                        <div class="row">
                            <div class="col-sm-4">
                                <!--left col-->
                                <div class="text-center">
                                    <img src="~/Sources/avatar.png" style="width: 150px;height: 150px;border-radius:50%;" class="avatar img-circle img-thumbnail" alt="avatar">
                                    <h6>Upload a different photo...</h6>
                                    <input type="file" name="imegurl" class="text-center center-block file-upload">
                                </div>
                            </div>

                            <div class="col-sm-8">
                                <div class="form-group">
                                    <input type="text" class="form-control" name="first_name" placeholder="first name" value="@Model.FName">
                                    <input type="text" class="form-control" name="last_name" placeholder="last name" value="@Model.LName">
                                    <input type="text" class="form-control" name="phone" placeholder="enter phone" value="@Model.PhoneNumber">
                                    <input type="email" class="form-control" name="email" placeholder="you@email.com" value="@Model.Email">
                                    <input type="password" class="form-control" name="currpassword" placeholder="Current password">
                                    <input type="password" class="form-control" name="newpassword" placeholder="New password">
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-xs-12">
                                <button class="btn btn-lg btn-default bu" type="submit"><i class="glyphicon glyphicon-ok-sign"></i> Save</button>
                            </div>
                        </div>
                    </form>

                </div>

            </div>
        </div>

    </div>
</div>