@using Sawa2ly.Migrations
@model IEnumerable<Sawa2ly.Models.Project>
@{
    ViewBag.Title = "ListProjects";
    Layout = "~/Views/AdminsDash/_LayoutA.cshtml";
}
<h2 style="margin-bottom:50px;">All projects</h2>

<div class="container">
    
    @foreach(var Project in Model) { 
        <div class="row carousel-row">
            <div class="col-xs-8 col-xs-offset-2 slide-row">
                <div id="carousel-3" class="carousel slide slide-carousel" data-ride="carousel">
                    <!-- Wrapper for slides -->
                    <div class="carousel-inner">
                        <div>
                            <img width="140px" height="140px" src="~/Sources/images.jpg" alt="Image">
                        </div>
                    </div>
                </div>
                <div class="slide-content">
                    <h4>@Project.Name</h4>
                    <p>
                        @Project.Description
                    </p>
                </div>
                <div class="slide-footer">
                    <span class="pull-right buttons">

                        <a href="@Url.Action("DeleteProject", "Admin", new { id=@Project.Id })">
                            <button class="btn btn-sm btn-default"><i class="fa fa-fw fa-eye"></i> Delete</button>
                        </a>
                        <a href="@Url.Action("Index", "Project", new { id=@Project.Id })">
                            <button class="btn btn-sm btn-default"><i class="fa fa-fw fa-eye"></i> Show</button>
                        </a>

                    </span>
                </div>
            </div>
        </div>
    }
</div>